<h4>Terminal Commands Extended</h4>
<div id="terminalcommandsextended_custom_commands" class="row-fluid">
	<div class="row-fluid">
		<div class="span2">Icon</div>
		<div class="span2">Label</div>
		<div class="span5">Tooltip</div>
		<div class="span1" style="text-align: center;">Enabled</div>
		<div class="span2" style="text-align: center;"><button class="btn btn-mini" data-bind="click: addCommand" title="Add custom command"><i class="fa fa-plus"></i> Add</button></div>
	</div>
	<div data-bind="sortable: { data: settingsViewModel.settings.plugins.terminalcommandsextended.commands, options: { cancel: '.unsortable', handle: '.sortable_handle'} }" class="row-fluid">
		<div class="row-fluid">
			<div class="span2">
				<div class="input-prepend input-block-level">
					<span class="add-on" style="width: 25px;"><i class="fa-lg" data-bind="css: icon"></i></span>
					<input type="text" data-bind="iconpicker: icon,iconpickerOptions: {hideOnSelect: true, collision: true}" class="iconpicker input-block-level"/>
				</div>
			</div>
			<div class="span2">
				<input type="text" class="input-block-level" data-bind="value: label"/>
			</div>
			<div class="span5">
				<input type="text" class="input-block-level" data-bind="value: tooltip"/>
			</div>
			<div class="span1" style="text-align: center;">
				<input type="checkbox" data-bind="checked: enabled_while_printing" title="While printing"/>
			</div>
			<div class="span2" style="text-align: center;">
				<div class="btn-group action-buttons" style="margin-top: 5px;">
					<button class="btn btn-mini moveJobUp" data-bind="click: $parent.moveCommandUp, enable: $index() !== 0" title="Move command up">
						<i class="fa fa-arrow-up"></i>
					</button>
					<button class="btn btn-mini moveJobDown" data-bind="click: $parent.moveCommandDown, enable: $index() !== $parent.settingsViewModel.settings.plugins.terminalcommandsextended.commands().length - 1" title="Move command down">
						<i class="fa fa-arrow-down"></i>
					</button>
					<button class="btn btn-mini btn-danger removeJob" data-bind="click: $parent.removeCommand" title="Remove command">
						<i class="fa fa-times"></i>
					</button>
				</div>
			</div>
		</div>
		<div class="row-fluid">
			<div class="span2" style="text-align: right;padding-top: 5px;">Command:</div>
			<div class="span10" style="padding-right: 18px;"><textarea class="input-block-level" id="terminalcommandsextended_command" rows="1" data-bind="value: command"></textarea></div>
		</div>
	</div>
</div>